{%- form 'customer', id: 'newsletter-form' -%}
  <input type="hidden" name="contact[tags]" value="newsletter">
  {%- if form.posted_successfully? -%}
    <p class="form-success" role="alert">{{ 'newsletter.success' | t }}</p>
  {%- endif -%}
  {%- if form.errors -%}
    <p class="form-error" role="alert">{{ form.errors.translated_fields.email | default: 'newsletter.error' | t }}</p>
  {%- endif -%}
  <div class="form-inline">
    <div class="form-group">
      <label for="newsletter-email" class="visually-hidden">{{ 'newsletter.email_placeholder' | t }}</label>
      <input
        type="email"
        name="contact[email]"
        id="newsletter-email"
        class="input"
        placeholder="{{ 'newsletter.email_placeholder' | t }}"
        required
        autocomplete="email"
        {% if form.posted_successfully? %}disabled{% endif %}
      >
    </div>
    <button type="submit" class="button">{{ 'newsletter.submit' | t }}</button>
  </div>
{%- endform -%}
