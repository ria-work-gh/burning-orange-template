{% comment %}
  Renders accessible numbered pagination.

  Expects:
    - paginate: Liquid paginate object (from {% paginate %} block)

  Usage:
    {% paginate collection.products by 16 %}
      {% render 'pagination', paginate: paginate %}
    {% endpaginate %}
{% endcomment %}

{%- if paginate.pages > 1 -%}
<nav aria-label="{{ 'general.pagination.label' | t }}">
  <ul class="pagination">
    {%- if paginate.previous -%}
      <li><a href="{{ paginate.previous.url }}">{{ 'general.pagination.previous' | t }}</a></li>
    {%- endif -%}
    {%- for part in paginate.parts -%}
      {%- if part.is_link -%}
        <li><a href="{{ part.url }}">{{ part.title }}</a></li>
      {%- elsif part.title == paginate.current_page -%}
        <li><span aria-current="page">{{ part.title }}</span></li>
      {%- else -%}
        <li><span>{{ part.title }}</span></li>
      {%- endif -%}
    {%- endfor -%}
    {%- if paginate.next -%}
      <li><a href="{{ paginate.next.url }}">{{ 'general.pagination.next' | t }}</a></li>
    {%- endif -%}
  </ul>
</nav>
{%- endif -%}
