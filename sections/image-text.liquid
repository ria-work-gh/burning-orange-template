{%- if section.settings.image or section.settings.video or section.blocks.size > 0 -%}
  <div class="image-text image-text-{{ section.settings.layout }} color-{{ section.settings.color_scheme }}">
    <div class="image-text-media">
      {%- if section.settings.media_type == 'video' and section.settings.video -%}
        {{ section.settings.video | video_tag:
          controls: true,
          playsinline: true,
          preload: 'metadata',
          class: 'image-text-video'
        }}
      {%- elsif section.settings.image -%}
        {{ section.settings.image | image_url: width: 1200 | image_tag:
          loading: 'lazy',
          sizes: '(min-width: 600px) 50vw, 100vw',
          widths: '375, 550, 750, 1100',
          width: section.settings.image.width,
          height: section.settings.image.height,
          class: 'image-text-image'
        }}
      {%- endif -%}
    </div>

    <div class="image-text-content align-{{ section.settings.vertical_alignment }}">
      {%- for block in section.blocks -%}
        {%- case block.type -%}
          {%- when 'heading' -%}
            {%- if block.settings.heading != blank -%}
              <h2 class="image-text-heading text-large" {{ block.shopify_attributes }}>
                {{ block.settings.heading }}
              </h2>
            {%- endif -%}

          {%- when 'text' -%}
            {%- if block.settings.content != blank -%}
              <div class="image-text-body typeset" {{ block.shopify_attributes }}>
                {{ block.settings.content }}
              </div>
            {%- endif -%}

          {%- when 'button' -%}
            {%- if block.settings.url != blank and block.settings.label != blank -%}
              <a
                href="{{ block.settings.url }}"
                class="button{% if block.settings.style == 'secondary' %} secondary{% endif %} image-text-button"
                {{ block.shopify_attributes }}
              >
                {{ block.settings.label }}
              </a>
            {%- endif -%}
        {%- endcase -%}
      {%- endfor -%}
    </div>
  </div>
{%- endif -%}

{% stylesheet %}
  .image-text {
    background-color: var(--color-bg);
    color: var(--color-text);
    display: grid;
    gap: var(--spacing-m);
    padding: var(--spacing-l) var(--spacing-base);
  }

  @media (min-width: 600px) {
    .image-text {
      grid-template-columns: 1fr 1fr;
      padding: var(--spacing-xl) var(--spacing-m);
    }

    .image-text-image-right .image-text-media {
      order: 2;
    }
  }

  .image-text-media img,
  .image-text-media video {
    width: 100%;
    height: auto;
    display: block;
  }

  .image-text-content {
    display: flex;
    flex-direction: column;
    gap: var(--spacing-base);
  }

  .image-text-content.align-top { align-self: start; }
  .image-text-content.align-center { align-self: center; }
  .image-text-content.align-bottom { align-self: end; }

  .image-text-heading {
    margin: 0;
  }

  .image-text-button {
    align-self: flex-start;
  }
{% endstylesheet %}

{% schema %}
{
  "name": "Image with text",
  "tag": "section",
  "class": "image-text-section",
  "settings": [
    {
      "type": "image_picker",
      "id": "image",
      "label": "Image"
    },
    {
      "type": "video",
      "id": "video",
      "label": "Video"
    },
    {
      "type": "select",
      "id": "media_type",
      "label": "Media type",
      "options": [
        { "value": "image", "label": "Image" },
        { "value": "video", "label": "Video" }
      ],
      "default": "image"
    },
    {
      "type": "select",
      "id": "layout",
      "label": "Layout",
      "options": [
        { "value": "image-left", "label": "Image left, text right" },
        { "value": "image-right", "label": "Image right, text left" }
      ],
      "default": "image-left"
    },
    {
      "type": "select",
      "id": "vertical_alignment",
      "label": "Vertical alignment",
      "options": [
        { "value": "top", "label": "Top" },
        { "value": "center", "label": "Center" },
        { "value": "bottom", "label": "Bottom" }
      ],
      "default": "center"
    },
    {
      "type": "color_scheme",
      "id": "color_scheme",
      "label": "Color scheme",
      "default": "scheme-1"
    }
  ],
  "blocks": [
    {
      "type": "heading",
      "name": "Heading",
      "settings": [
        {
          "type": "text",
          "id": "heading",
          "label": "Heading",
          "default": "Image with text"
        }
      ]
    },
    {
      "type": "text",
      "name": "Text",
      "settings": [
        {
          "type": "richtext",
          "id": "content",
          "label": "Content",
          "default": "<p>Pair text with an image to focus on your chosen product, collection, or blog post.</p>"
        }
      ]
    },
    {
      "type": "button",
      "name": "Button",
      "limit": 2,
      "settings": [
        {
          "type": "text",
          "id": "label",
          "label": "Label",
          "default": "Learn more"
        },
        {
          "type": "url",
          "id": "url",
          "label": "Link"
        },
        {
          "type": "select",
          "id": "style",
          "label": "Style",
          "options": [
            { "value": "primary", "label": "Primary" },
            { "value": "secondary", "label": "Secondary" }
          ],
          "default": "primary"
        }
      ]
    }
  ],
  "presets": [
    {
      "name": "Image with text",
      "blocks": [
        { "type": "heading" },
        { "type": "text" },
        { "type": "button" }
      ]
    }
  ]
}
{% endschema %}
