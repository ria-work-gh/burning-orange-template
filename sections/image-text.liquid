{%- comment -%} Image text split: flexible image + content layout, max-height 90vh. {%- endcomment -%}
{%- if section.settings.image != blank or section.blocks.size > 0 -%}
  <div class="split{% if section.settings.image_position == 'right' %} image-right{% endif %}{% if section.settings.image_width == 'half' %} image-half{% endif %}{% if section.settings.color_scheme != blank %} color-{{ section.settings.color_scheme }}{% endif %}">
    <figure class="split-image-wrapper">
      {%- if section.settings.image != blank -%}
        {{
          section.settings.image
          | image_url: width: 1800
          | image_tag:
            loading: 'lazy',
            sizes: '(min-width: 1024px) 75vw, 100vw',
            class: 'split-image',
            width: section.settings.image.width,
            height: section.settings.image.height
        }}
      {%- endif -%}
      {%- if section.settings.caption != blank -%}
        <figcaption class="split-caption">{{ section.settings.caption }}</figcaption>
      {%- endif -%}
    </figure>

    <div class="split-content">
      {%- for block in section.blocks -%}
        {%- case block.type -%}
          {%- when 'heading' -%}
            {%- if block.settings.heading != blank -%}
              <h2 class="text-large" {{ block.shopify_attributes }}>
                {{ block.settings.heading }}
              </h2>
            {%- endif -%}

          {%- when 'body' -%}
            {%- if block.settings.content != blank -%}
              <div class="typeset" {{ block.shopify_attributes }}>
                {{ block.settings.content }}
              </div>
            {%- endif -%}

          {%- when 'link' -%}
            {%- if block.settings.url != blank and block.settings.label != blank -%}
              <a href="{{ block.settings.url }}" class="inline-link text-cap" {{ block.shopify_attributes }}>
                {{ block.settings.label }}
              </a>
            {%- endif -%}
        {%- endcase -%}
      {%- endfor -%}
    </div>
  </div>
{%- endif -%}

{% stylesheet %}
  .split {
    padding: var(--spacing-4) var(--spacing-2);
    display: flex;
    gap: var(--spacing-2);
    align-items: center;
    max-height: 90vh;
    overflow: hidden;
  }

  .split.image-right {
    flex-direction: row-reverse;
  }

  .split-image-wrapper {
    width: 75%;
    flex-shrink: 0;
  }

  .split.image-half .split-image-wrapper {
    width: 50%;
  }

  .split-image {
    width: 100%;
    height: auto;
    object-fit: cover;
  }

  .split-content {
    max-width: 60ch;
    display: grid;
    gap: var(--spacing-2);
  }

  .split-caption {
    font-size: var(--font-detail-size);
    color: var(--color-text-muted);
    margin-top: var(--spacing-1);
    max-width: 80ch;
  }

  @media (max-width: 1023px) {
    .split {
      flex-direction: column;
      max-height: none;
    }

    .split.image-right {
      flex-direction: column;
    }

    .split-image-wrapper {
      width: 100%;
    }

    .split.image-half .split-image-wrapper {
      width: 100%;
    }

    .split-content {
      max-width: 100%;
      width: 100%;
    }
  }
{% endstylesheet %}

{% schema %}
{
  "name": "Image text split",
  "tag": "section",
  "class": "image-text-section",
  "settings": [
    {
      "type": "image_picker",
      "id": "image",
      "label": "Image"
    },
    {
      "type": "select",
      "id": "image_position",
      "label": "Image position",
      "options": [
        { "value": "left", "label": "Left" },
        { "value": "right", "label": "Right" }
      ],
      "default": "left"
    },
    {
      "type": "select",
      "id": "image_width",
      "label": "Image width",
      "options": [
        { "value": "three-quarter", "label": "Three quarter" },
        { "value": "half", "label": "Half" }
      ],
      "default": "three-quarter"
    },
    {
      "type": "text",
      "id": "caption",
      "label": "Caption"
    },
    {
      "type": "color_scheme",
      "id": "color_scheme",
      "label": "Color scheme"
    }
  ],
  "blocks": [
    {
      "type": "heading",
      "name": "Heading",
      "settings": [
        {
          "type": "text",
          "id": "heading",
          "label": "Heading"
        }
      ]
    },
    {
      "type": "body",
      "name": "Body text",
      "settings": [
        {
          "type": "richtext",
          "id": "content",
          "label": "Content"
        }
      ]
    },
    {
      "type": "link",
      "name": "Link",
      "limit": 1,
      "settings": [
        {
          "type": "text",
          "id": "label",
          "label": "Label"
        },
        {
          "type": "url",
          "id": "url",
          "label": "URL"
        }
      ]
    }
  ],
  "presets": [
    {
      "name": "Image text split",
      "blocks": [
        { "type": "heading" },
        { "type": "body" },
        { "type": "link" }
      ]
    }
  ]
}
{% endschema %}
