{%- comment -%} Hero banner: full-viewport image with text overlay at bottom center. {%- endcomment -%}
<div class="hero-banner{% if section.settings.height == 'compact' %} compact{% endif %}">
  {%- if section.settings.image != blank -%}
    {{
      section.settings.image
      | image_url: width: 2400
      | image_tag:
        loading: 'eager',
        sizes: '100vw',
        width: section.settings.image.width,
        height: section.settings.image.height
    }}
  {%- endif -%}

  {%- if section.settings.text != blank -%}
    <div class="hero-text-overlay">
      <p class="hero-text text-medium">{{ section.settings.text }}</p>
    </div>
  {%- endif -%}
</div>

{% stylesheet %}
  .hero-banner {
    position: relative;
    height: 100dvh;
    margin-bottom: var(--spacing-4);
    overflow: hidden;
  }

  .hero-banner.compact {
    height: 75vh;
  }

  .hero-banner img {
    width: 100%;
    height: 100%;
    object-fit: cover;
  }

  .hero-text-overlay {
    position: absolute;
    bottom: var(--spacing-3);
    left: 0;
    right: 0;
    color: white;
    text-align: center;
    padding-left: var(--spacing-3);
    padding-right: var(--spacing-3);
  }

  .hero-text {
    max-width: 35ch;
    margin-inline: auto;
  }

  @media (min-width: 750px) {
    .hero-text-overlay {
      padding-left: calc(var(--spacing-3) * 3);
      padding-right: calc(var(--spacing-3) * 3);
    }
  }
{% endstylesheet %}

{% schema %}
{
  "name": "Hero banner",
  "tag": "section",
  "class": "hero-section",
  "settings": [
    {
      "type": "image_picker",
      "id": "image",
      "label": "Background image"
    },
    {
      "type": "text",
      "id": "text",
      "label": "Text"
    },
    {
      "type": "select",
      "id": "height",
      "label": "Height",
      "options": [
        { "value": "full", "label": "Full (100dvh)" },
        { "value": "compact", "label": "Compact (75vh)" }
      ],
      "default": "full"
    }
  ],
  "presets": [
    {
      "name": "Hero banner"
    }
  ]
}
{% endschema %}
