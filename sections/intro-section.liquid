{%- comment -%} Intro section: centered heading with optional description. {%- endcomment -%}
<div class="intro-section{% if section.settings.color_scheme != blank %} color-{{ section.settings.color_scheme }}{% endif %}">
  {%- if section.settings.heading != blank -%}
    {%- if section.settings.heading_tag == 'h2' -%}
      <h2 class="text-large">{{ section.settings.heading }}</h2>
    {%- else -%}
      <h1 class="text-large">{{ section.settings.heading }}</h1>
    {%- endif -%}
  {%- endif -%}
  {%- if section.settings.description != blank -%}
    <div class="intro-description">{{ section.settings.description }}</div>
  {%- endif -%}
</div>

{% stylesheet %}
  .intro-section {
    text-align: left;
    max-width: 75ch;
    margin-inline: auto;
    padding: calc(var(--spacing-5) * 2) var(--spacing-2) var(--spacing-4);
    display: grid;
    gap: var(--spacing-2);
  }

  @media (min-width: 750px) {
    .intro-section {
      text-align: center;
    }
  }
{% endstylesheet %}

{% schema %}
{
  "name": "Intro section",
  "tag": "section",
  "class": "intro-section-wrapper",
  "settings": [
    {
      "type": "text",
      "id": "heading",
      "label": "Heading",
      "default": "Shop"
    },
    {
      "type": "select",
      "id": "heading_tag",
      "label": "Heading tag",
      "options": [
        { "value": "h1", "label": "H1" },
        { "value": "h2", "label": "H2" }
      ],
      "default": "h1"
    },
    {
      "type": "richtext",
      "id": "description",
      "label": "Description"
    },
    {
      "type": "color_scheme",
      "id": "color_scheme",
      "label": "Color scheme",
      "default": "scheme-1"
    }
  ],
  "presets": [
    {
      "name": "Intro section"
    }
  ]
}
{% endschema %}
