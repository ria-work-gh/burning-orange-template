{%- comment -%} PDP: stacked layout — gallery, info grid, collection products. {%- endcomment -%}

<section class="main-product color-{{ section.settings.color_scheme }}">
  {% render 'json-ld-product', product: product %}

  {%- comment -%} — Media — {%- endcomment -%}
  <product-form class="pdp" data-section-id="{{ section.id }}">
    <script type="application/json" class="product-json">
      {{ product | json }}
    </script>

    <div class="pdp-media">
      {% render 'product-gallery', product: product %}

      {%- comment -%} Color variant pills {%- endcomment -%}
      {%- assign color_hex = product.metafields.custom.color_hex -%}
      {%- assign color_name = product.metafields.custom.color_name -%}
      {%- assign siblings = product.metafields.custom.product_siblings.value -%}

      {%- if color_hex != blank -%}
        <div class="pdp-tags">
          <div class="pdp-tag-wrapper" data-color-tag>
            <div class="tag-popover" data-color-popover>
              {%- if siblings != blank -%}
                {%- for sibling in siblings -%}
                  {%- assign sibling_hex = sibling.metafields.custom.color_hex -%}
                  {%- assign sibling_name = sibling.metafields.custom.color_name -%}
                  {%- if sibling_hex != blank -%}
                    <a href="{{ sibling.url }}" class="tag-popover-item">
                      <span class="pdp-swatch" style="--hex: {{ sibling_hex }}"></span>
                      {{ sibling_name | downcase }}
                    </a>
                  {%- endif -%}
                {%- endfor -%}
              {%- endif -%}
            </div>
            <button type="button" class="pdp-tag" data-color-trigger aria-expanded="false">
              <span class="pdp-swatch" style="--hex: {{ color_hex }}"></span>
              {{ color_name | downcase }}
            </button>
          </div>
        </div>
      {%- endif -%}
    </div>

    {%- comment -%} — Info grid — {%- endcomment -%}
    {%- form 'product', product -%}
      <input type="hidden" name="id" value="{{ product.selected_or_first_available_variant.id }}">

      <div class="pdp-info">
        <div class="pdp-info-left">
          <div class="pdp-header">
            <h1 class="text-large">{{ product.title }}</h1>
            <div class="pdp-price" data-product-price data-variant-render="price">
              {% render 'product-price', product: product %}
            </div>
          </div>

          {%- if product.has_only_default_variant == false -%}
            <div class="product-variants">
              {% render 'product-variant-selector', product: product %}
            </div>
          {%- endif -%}

          <div class="pdp-actions" data-variant-render="buy-buttons">
            {% render 'product-buy-buttons', product: product, show_quantity: true %}
          </div>
        </div>

        <div class="pdp-info-right">
          {%- if product.description != blank -%}
            <div class="typeset">{{ product.description }}</div>
          {%- endif -%}
        </div>
      </div>
    {%- endform -%}
  </product-form>

  {%- comment -%} — Collection products + accordions — {%- endcomment -%}
  {%- liquid
    assign pdp_collection = nil
    if product.tags contains 'saffra'
      assign pdp_collection = collections['saffra']
    elsif product.tags contains 'viridis'
      assign pdp_collection = collections['viridis']
    elsif product.tags contains 'rubra'
      assign pdp_collection = collections['rubra']
    endif
  -%}

  {%- assign has_accordions = false -%}
  {%- for block in section.blocks -%}
    {%- if block.type == 'accordion' -%}
      {%- assign has_accordions = true -%}
      {%- break -%}
    {%- endif -%}
  {%- endfor -%}

  {%- if has_accordions or pdp_collection != blank -%}
    <div class="pdp-collection">
      <div class="pdp-collection-left">
        {%- if has_accordions -%}
          <span class="text-cap">{{ 'products.product.details_heading' | t }}</span>
          {%- for block in section.blocks -%}
            {%- case block.type -%}
              {%- when 'accordion' -%}
                <details class="pdp-dropdown" {{ block.shopify_attributes }}>
                  <summary class="pdp-dropdown-summary text-medium">{{ block.settings.heading }}</summary>
                  <div class="pdp-dropdown-content typeset">{{ block.settings.content }}</div>
                </details>
              {%- when '@app' -%}
                {% render block %}
            {%- endcase -%}
          {%- endfor -%}
        {%- endif -%}
      </div>

      {%- if pdp_collection != blank -%}
        <div class="pdp-collection-right">
          <span class="text-cap">{{ pdp_collection.title }} collection</span>
          <div class="pdp-collection-grid">
            {%- comment -%} Bundles first {%- endcomment -%}
            {%- for coll_product in pdp_collection.products -%}
              {%- if coll_product.handle != product.handle and coll_product.type == 'Bundles' -%}
                {% render 'product-card', product: coll_product, lazy_load: true %}
              {%- endif -%}
            {%- endfor -%}
            {%- for coll_product in pdp_collection.products -%}
              {%- if coll_product.handle != product.handle and coll_product.type != 'Bundles' -%}
                {% render 'product-card', product: coll_product, lazy_load: true %}
              {%- endif -%}
            {%- endfor -%}
          </div>
        </div>
      {%- endif -%}
    </div>
  {%- endif -%}
</section>

<script src="{{ 'product-form.js' | asset_url }}" defer></script>
<script src="{{ 'embla-carousel.umd.js' | asset_url }}" defer></script>
<script src="{{ 'product-gallery.js' | asset_url }}" defer></script>
<script src="{{ 'quantity-selector.js' | asset_url }}" defer></script>

{% javascript %}
  document.addEventListener('DOMContentLoaded', function () {
    var tagWrapper = document.querySelector('[data-color-tag]');
    if (!tagWrapper) return;

    var trigger = tagWrapper.querySelector('[data-color-trigger]');
    var popover = tagWrapper.querySelector('[data-color-popover]');
    if (!trigger || !popover) return;

    var isTouch = 'ontouchstart' in window || navigator.maxTouchPoints > 0;

    function show() {
      popover.classList.add('is-open');
      trigger.setAttribute('aria-expanded', 'true');
    }

    function hide() {
      popover.classList.remove('is-open');
      trigger.setAttribute('aria-expanded', 'false');
    }

    if (!isTouch) {
      tagWrapper.addEventListener('mouseenter', show);
      tagWrapper.addEventListener('mouseleave', hide);
    }

    trigger.addEventListener('click', function () {
      if (popover.classList.contains('is-open')) {
        hide();
      } else {
        show();
      }
    });
  });
{% endjavascript %}

{% stylesheet %}
  .pdp {
    padding-top: var(--spacing-5);
  }

  .pdp-media {
    width: 100%;
    height: 50vh;
    position: relative;
  }

  @media (min-width: 750px) {
    .pdp-media {
      height: 75vh;
    }
  }

  .pdp-tags {
    position: absolute;
    bottom: var(--spacing-2);
    left: var(--spacing-2);
    display: flex;
    gap: var(--spacing-1);
    z-index: 1;
  }

  .pdp-tag-wrapper {
    position: relative;
  }

  .tag-popover {
    position: absolute;
    bottom: 100%;
    padding-bottom: var(--spacing-1);
    left: 0;
    display: flex;
    opacity: 0;
    transform: translateY(8px);
    pointer-events: none;
    transition: opacity 0.2s ease-out, transform 0.2s ease-out;
    flex-direction: column;
    gap: var(--spacing-1);
  }

  .tag-popover-item {
    background-color: hsla(45, 33%, 85%, 0.85);
    backdrop-filter: blur(8px);
    -webkit-backdrop-filter: blur(8px);
    padding: var(--spacing-1) var(--spacing-2);
    font-size: var(--font-base-size);
    display: flex;
    align-items: center;
    white-space: nowrap;
    text-decoration: none;
    color: inherit;
    transition: background-color var(--transition-fast);
  }

  .tag-popover-item:hover {
    background-color: hsla(45, 33%, 75%, 0.9);
  }

  .pdp-tag {
    background-color: hsla(45, 33%, 85%, 0.85);
    backdrop-filter: blur(8px);
    -webkit-backdrop-filter: blur(8px);
    padding: var(--spacing-1) var(--spacing-2);
    font-size: var(--font-base-size);
    display: flex;
    align-items: center;
    cursor: pointer;
    transition: background-color var(--transition-fast);
  }

  .pdp-tag:hover {
    background-color: hsla(45, 33%, 75%, 0.9);
  }

  .pdp-swatch {
    display: inline-block;
    width: 12px;
    height: 12px;
    background-color: var(--hex);
    border: 1px solid hsla(0, 0%, 0%, 0.1);
    margin-right: 8px;
  }

  .pdp-info {
    display: grid;
    grid-template-columns: 1fr;
    gap: var(--spacing-2);
    align-items: start;
    padding: var(--spacing-3) var(--spacing-2);
  }

  @media (min-width: 750px) {
    .pdp-info {
      grid-template-columns: 1fr 1fr;
    }
  }

  .pdp-info-left {
    display: grid;
    gap: var(--spacing-2);
  }

  .pdp-header {
    display: grid;
    gap: var(--spacing-1);
  }

  .pdp-price {
    font-size: var(--font-medium-size);
    line-height: var(--font-medium-height);
  }

  .pdp-info-right {
    max-width: 65ch;
    color: var(--color-text);
  }

  .pdp-actions {
    display: flex;
    align-items: stretch;
    gap: var(--spacing-2);
  }

  .pdp-actions .buy-buttons {
    display: flex;
    flex-wrap: wrap;
    gap: var(--spacing-1);
    align-items: stretch;
  }

  .pdp-collection {
    padding: var(--spacing-4) var(--spacing-2);
    display: grid;
    grid-template-columns: 1fr;
    gap: var(--spacing-2);
    align-items: start;
  }

  @media (min-width: 750px) {
    .pdp-collection {
      grid-template-columns: 1fr 1fr;
    }
  }

  .pdp-collection-left {
    max-width: 65ch;
  }

  .pdp-collection-left > .text-cap,
  .pdp-collection-right > .text-cap {
    display: block;
    margin-bottom: var(--spacing-2);
  }

  .pdp-collection-left > .text-cap + .pdp-dropdown summary {
    padding-top: 0;
  }

  .pdp-collection-grid {
    display: grid;
    grid-template-columns: repeat(2, 1fr);
    gap: var(--spacing-3) var(--spacing-2);
  }

  @media (min-width: 1024px) {
    .pdp-collection-grid {
      grid-template-columns: repeat(3, 1fr);
    }
  }

  .pdp-dropdown + .pdp-dropdown {
    border-top: 1px solid var(--color-text);
  }

  .pdp-dropdown summary {
    padding: var(--spacing-2) 0;
    cursor: pointer;
    display: flex;
    justify-content: space-between;
    align-items: center;
    width: 100%;
    text-align: left;
    list-style: none;
  }

  .pdp-dropdown summary::-webkit-details-marker {
    display: none;
  }

  .pdp-dropdown summary::after {
    content: '+';
    font-size: var(--font-control-size);
  }

  .pdp-dropdown[open] summary::after {
    content: '\2212';
  }

  .pdp-dropdown-content {
    padding-bottom: var(--spacing-2);
    display: grid;
    gap: var(--spacing-1);
  }

  product-form.is-loading [data-variant-render] {
    opacity: 0.6;
    pointer-events: none;
  }

  .variant-options {
    border: 0;
    margin: 0;
    padding: 0;
  }

  .tag-popover.is-open {
    opacity: 1;
    transform: translateY(0);
    pointer-events: auto;
  }

  @media (prefers-reduced-motion: reduce) {
    .tag-popover-item,
    .pdp-tag,
    .tag-popover {
      transition: none !important;
    }
  }
{% endstylesheet %}

