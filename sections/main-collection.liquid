<div class="collection color-{{ section.settings.color_scheme }}" data-section-id="{{ section.id }}">
  {%- assign active_filter_count = 0 -%}
  {%- for filter in collection.filters -%}
    {%- assign active_filter_count = active_filter_count | plus: filter.active_values.size -%}
  {%- endfor -%}

  {%- if section.settings.show_filters -%}
    <div class="collection-toolbar">
      <button class="filter-toggle text-cap" aria-expanded="false" aria-controls="filter-drawer">
        {{ 'collections.filtering.filters' | t }}
        {%- if active_filter_count > 0 -%}
          <span class="filter-count">({{ active_filter_count }})</span>
        {%- endif -%}
      </button>
    </div>
  {%- endif -%}

  {%- if section.settings.show_filters -%}
    <div class="active-filters" data-active-filters>
      {%- if active_filter_count > 0 -%}
        {%- for filter in collection.filters -%}
          {%- for value in filter.active_values -%}
            <a href="{{ value.url_to_remove }}" class="active-filter">
              {{ value.label }}
              <span aria-hidden="true">&times;</span>
              <span class="visually-hidden">{{ 'accessibility.remove_filter' | t: label: value.label }}</span>
            </a>
          {%- endfor -%}
        {%- endfor -%}
      {%- endif -%}
    </div>
  {%- endif -%}

  <div class="collection-content">
    <div class="collection-products" data-products>
      {%- paginate collection.products by section.settings.products_per_page -%}
        {%- if collection.products.size > 0 -%}
          <div class="collection-grid">
            {%- for product in collection.products -%}
              {% render 'product-card', product: product %}
            {%- endfor -%}
          </div>

          {% render 'pagination', paginate: paginate %}
        {%- else -%}
          <div class="collection-empty">
            <p>{{ 'collections.general.no_products' | t }}</p>
            {%- if active_filter_count > 0 -%}
              <a href="{{ collection.url }}" class="button">{{ 'collections.filtering.clear' | t }}</a>
            {%- endif -%}
          </div>
        {%- endif -%}
      {%- endpaginate -%}
    </div>
  </div>

  {%- if section.settings.show_filters -%}
    {% render 'filter-drawer', collection: collection %}
  {%- endif -%}
</div>

{% stylesheet %}
  .collection {
    padding: var(--spacing-2);
  }

  .collection-toolbar {
    display: flex;
    align-items: center;
    margin-block: var(--spacing-2);
  }

  .filter-toggle {
    font: inherit;
    display: flex;
    align-items: center;
    gap: var(--spacing-1);
    transition: color var(--transition-fast);
  }

  .filter-toggle:hover {
    color: var(--color-accent);
  }

  .filter-count {
    color: var(--color-text-muted);
  }

  .collection-content {
    display: grid;
    grid-template-columns: 1fr;
    gap: var(--spacing-3);
  }

  /* Product grid: 2 → 3 → 4 columns */
  .collection-grid {
    display: grid;
    gap: var(--spacing-3) var(--spacing-2);
    grid-template-columns: repeat(2, 1fr);
  }

  @media (min-width: 750px) {
    .collection-grid {
      grid-template-columns: repeat(3, 1fr);
    }
  }

  @media (min-width: 1024px) {
    .collection-grid {
      grid-template-columns: repeat(4, 1fr);
    }
  }

  /* Loading state */
  .collection.is-loading .collection-products {
    opacity: 0.5;
    pointer-events: none;
  }

  /* Active filter pills */
  .active-filters {
    display: flex;
    flex-wrap: wrap;
    gap: var(--spacing-1);
    min-height: 0;
  }

  .active-filters:not(:empty) {
    margin-bottom: var(--spacing-2);
  }

  .active-filter {
    display: inline-flex;
    align-items: center;
    gap: var(--spacing-1);
    padding: var(--spacing-1) var(--spacing-2);
    font-size: var(--font-detail-size);
    border: 1px solid currentColor;
    transition: border-color var(--transition-fast);
  }

  .active-filter:hover {
    border-color: var(--color-accent);
  }

  .collection-empty {
    text-align: center;
    padding: var(--spacing-5) 0;
  }

  .collection-empty .button {
    margin-top: var(--spacing-2);
  }
{% endstylesheet %}

{% schema %}
{
  "name": "Collection",
  "settings": [
    {
      "type": "range",
      "id": "products_per_page",
      "label": "Products per page",
      "min": 8,
      "max": 48,
      "step": 4,
      "default": 12
    },
    {
      "type": "checkbox",
      "id": "show_filters",
      "label": "Show filters",
      "default": true
    },
    {
      "type": "color_scheme",
      "id": "color_scheme",
      "label": "Color scheme",
      "default": "scheme-1"
    }
  ]
}
{% endschema %}
