{%- comment -%} Hotspot image: full image with positioned hotspot markers and popovers. {%- endcomment -%}

<hotspot-image class="hotspot-section color-{{ section.settings.color_scheme }}">
  <div class="hotspot-container">
    {%- if section.settings.image != blank -%}
      {{
        section.settings.image
        | image_url: width: 2000
        | image_tag:
          class: 'hotspot-image',
          loading: 'lazy',
          width: section.settings.image.width,
          height: section.settings.image.height
      }}
    {%- endif -%}

    {%- for block in section.blocks -%}
      <button
        class="hotspot-marker"
        style="left: {{ block.settings.x }}%; top: {{ block.settings.y }}%;"
        aria-label="{{ block.settings.title }}"
        data-hotspot="{{ block.id }}"
        {{ block.shopify_attributes }}
      >
        <svg class="hotspot-plus" width="20" height="20" viewBox="0 0 20 20" fill="none" aria-hidden="true" focusable="false">
          <path d="M10 2V18M2 10H18" stroke="white" stroke-width="2.5" stroke-linecap="round"/>
        </svg>

        <div class="hotspot-popover" role="tooltip" aria-hidden="true">
          {%- if block.settings.title != blank -%}
            <h3 class="hotspot-title">{{ block.settings.title }}</h3>
          {%- endif -%}
          {%- if block.settings.description != blank -%}
            <p class="hotspot-description">{{ block.settings.description }}</p>
          {%- endif -%}
        </div>
      </button>
    {%- endfor -%}
  </div>
</hotspot-image>

<script type="module" src="{{ 'hotspot-image.js' | asset_url }}"></script>

{% stylesheet %}
  .hotspot-section {
    background-color: var(--color-input-bg);
    height: 85vh;
    padding: var(--spacing-2);
    margin: var(--spacing-2);
    box-sizing: border-box;
    display: flex;
    align-items: center;
    justify-content: center;
  }

  .hotspot-container {
    position: relative;
    max-width: 1000px;
    max-height: 100%;
  }

  .hotspot-image {
    max-width: 100%;
    max-height: calc(85vh - var(--spacing-2) * 2);
    object-fit: contain;
    display: block;
  }

  .hotspot-marker {
    position: absolute;
    width: 40px;
    height: 40px;
    transform: translate(-50%, -50%);
    background-color: var(--color-accent);
    border-radius: 50%;
    display: flex;
    align-items: center;
    justify-content: center;
    cursor: pointer;
    transition: transform var(--transition-fast);
    z-index: 1;
  }

  .hotspot-marker:hover {
    transform: translate(-50%, -50%) scale(1.1);
  }

  .hotspot-plus {
    display: block;
  }

  /* Popover */
  .hotspot-popover {
    position: absolute;
    left: 50%;
    bottom: 100%;
    transform: translateX(-50%);
    margin-bottom: var(--spacing-1);
    padding: var(--spacing-1);
    min-width: 300px;
    max-width: 400px;
    z-index: 10;
    background-color: var(--color-background);
    text-align: left;
    opacity: 0;
    pointer-events: none;
    transition: opacity var(--transition-fast);
  }

  .hotspot-marker.is-active .hotspot-popover {
    opacity: 1;
    pointer-events: auto;
  }

  .hotspot-title {
    font-size: var(--font-base-size);
    line-height: 1.5;
    font-weight: normal;
    text-transform: uppercase;
    color: var(--color-text-muted);
    margin-bottom: var(--spacing-1);
  }

  .hotspot-description {
    font-size: var(--font-base-size);
    line-height: 1.5;
    color: var(--color-text);
  }

  @media (max-width: 1023px) {
    .hotspot-section {
      height: auto;
    }
  }

  @media (max-width: 749px) {
    .hotspot-marker {
      width: 32px;
      height: 32px;
    }

    .hotspot-plus {
      width: 16px;
      height: 16px;
    }

    .hotspot-popover {
      min-width: 250px;
      max-width: 300px;
    }
  }

  @media (prefers-reduced-motion: reduce) {
    .hotspot-marker,
    .hotspot-popover {
      transition: none;
    }
  }
{% endstylesheet %}

{% schema %}
{
  "name": "Hotspot image",
  "tag": "section",
  "class": "hotspot-image-section",
  "settings": [
    {
      "type": "image_picker",
      "id": "image",
      "label": "Image"
    },
    {
      "type": "color_scheme",
      "id": "color_scheme",
      "label": "Color scheme"
    }
  ],
  "blocks": [
    {
      "type": "hotspot",
      "name": "Hotspot",
      "limit": 8,
      "settings": [
        {
          "type": "range",
          "id": "x",
          "label": "Horizontal position (%)",
          "min": 0,
          "max": 100,
          "step": 1,
          "default": 50
        },
        {
          "type": "range",
          "id": "y",
          "label": "Vertical position (%)",
          "min": 0,
          "max": 100,
          "step": 1,
          "default": 50
        },
        {
          "type": "text",
          "id": "title",
          "label": "Title"
        },
        {
          "type": "textarea",
          "id": "description",
          "label": "Description"
        }
      ]
    }
  ],
  "presets": [
    {
      "name": "Hotspot image"
    }
  ]
}
{% endschema %}
